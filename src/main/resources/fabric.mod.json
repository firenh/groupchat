{
  "schemaVersion": 1,
  "id": "groupchat",
  "version": "${version}",

  "name": "GroupChat",
  "description": "A mod to add server-side group chats to Minecraft to allow for private messaging.",
  "authors": [
    "FireNH"
  ],
  "contact": {
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "LGPL-3.0",
  "icon": "assets/groupchat/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "fireopal.groupchat.GroupChat"
    ]
  },
  "mixins": [
    "groupchat.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": "1.18.x",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
